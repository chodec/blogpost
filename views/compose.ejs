<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="postTitle" class="form-control" id="title" placeholder="The best day of my life">
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        <textarea class="form-control" name="postBody" id="text" rows="5" placeholder="My deer diary, today ..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary mb-2" name="button">Publish</button>
</form>

<%- include('partials/footer') -%>
